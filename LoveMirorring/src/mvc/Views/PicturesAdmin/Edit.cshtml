@model mvc.Models.Picture

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PictureId" />
            <input type="hidden" asp-for="Id" class="form-control" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="PictureView" class="control-label"></label>
                <input asp-for="PictureView" class="form-control" />
                <span asp-validation-for="PictureView" class="text-danger"></span>
            </div>
            <img class="img-fluid" src="@(ViewData["URLAPI"] + Model.PictureView)" alt="Alternate Text" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PictureConfirmed" /> @Html.DisplayNameFor(model => model.PictureConfirmed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

