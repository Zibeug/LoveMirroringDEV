}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Utilisateur
                </th>
                <th>
                    Type de profil
                </th>
                <th>
                    Age
                </th>
                <th>
                    Sexe
                </th>
                <th>
                    Choix
                </th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
}


<form method="post" asp-route="Search">
    <div class="form-group">
        <button class="btn-primary btn-lg" asp-action="Search">Trouver votre âme soeur</button>
    </div>
</form>
