@model IEnumerable<mvc.Models.ContactRequest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestAnswered)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestAnswered)
            </td>
            <td>
                @if (item.RequestAnswered == false)
                {
                    <a asp-action="Edit" asp-route-id="@item.RequestId">Edit | </a>
                }
                <a asp-action="Details" asp-route-id="@item.RequestId">Details | </a>
                <a asp-action="Delete" asp-route-id="@item.RequestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
