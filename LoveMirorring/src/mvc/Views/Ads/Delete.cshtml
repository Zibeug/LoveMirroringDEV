@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model mvc.Models.Ad

@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>
    <h3>@Localizer["Message"]</h3>
    <!-- Content Row -->
    <div class="row">


        <div>
            <h4>@Localizer["Ad"]</h4>
            <hr />
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Titre)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Titre)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.AdView)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.AdView)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Link)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Link)
            </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value=@ViewData["Title"] class="btn btn-danger" /> |
                <a asp-action="Index">@Localizer["Back"]</a>
            </form>
        </div>
    </div>
</div>