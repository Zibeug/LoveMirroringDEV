@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model mvc.Models.AnswerRequest

@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = ViewData["layout"].ToString();
}

    <h1>@ViewData["Title"]</h1>

    <h4>@Localizer["Title1"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@ViewData["Title"] class="btn btn-primary" asp-for="@ViewData["id"]" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

