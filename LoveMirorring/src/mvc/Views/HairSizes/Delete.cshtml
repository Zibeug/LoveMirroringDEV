@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model mvc.Models.HairSize

@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Message"]</h3>
<div>
    <h4>@Localizer["Title1"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HairSizeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HairSizeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HairSizeId" />
        <input type="submit" value=@ViewData["Title"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back"]</a>
    </form>
</div>
