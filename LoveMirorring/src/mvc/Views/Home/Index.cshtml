@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Authentication

<h2>Claims</h2>

@if (ViewData["img"] != null)
{
    string imgPath = (ViewData["URLAPI"] as string) + (ViewData["img"] as string);
    <a href="@ViewData["link"]" target="_blank"><img class="img-fluid" src="@imgPath" alt="Alternate Text" /></a>
}

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>

<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>
