@model IdentityServerAspNetIdentity.ViewModels.SMSVerification
@{
    ViewData["Title"] = "Confirm Phone number";
}

    <h4>@ViewData["Title"]</h4>

    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Account" asp-action="PostVerifyPhoneCode" method="post">
                <p>
                    Un code de confirmation à a été envoyé au numéro suivant : @Model.PhoneNumber
                </p>
                <p>
                    Entrer le code à <strong>6 chiffres </strong> de la part de AUTHMSG:
                </p>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="VerificationCode"></label>
                    <input asp-for="VerificationCode" class="form-control" type="number" />
                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Confirmer</button>
            </form>
        </div>
    </div>
