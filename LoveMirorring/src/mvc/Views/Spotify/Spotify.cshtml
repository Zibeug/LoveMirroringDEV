@model mvc.ViewModels.MatchingModel
@using mvc.ViewModels
@{
    ViewData["Title"] = "Spotify";
}

<h1>Spotify</h1>
<hr />

<form method="post">
    <div class="form-group">
        @if (ViewData["categories"] != null)
        {
        <select class="browser-default custom-select mb-4">
        @foreach (SpotifyItem item in ViewData["categories"] as List<SpotifyItem>)
                {
            <option value="@item.id" selected>@item.name</option>
                }
            </select>
        }

    </div>
    <div class="form-group">
        <button class="btn btn-primary" asp-action="SearchSong">Afficher des musiques</button>
    </div>
</form>