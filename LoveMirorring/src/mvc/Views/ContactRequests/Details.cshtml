@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model mvc.Models.ContactRequest

@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Localizer["Title1"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestAnswered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestAnswered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
</div>
<div>
    @foreach (AnswerRequest answer in Model.AnswerRequests)
    {
    <p>@Localizer["Date"] @answer.AnswerDate | @Localizer["User"] @answer.Id | @Localizer["Text"] @answer.AnswerText </p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RequestId">@Localizer["Edit"]| </a>
    <a asp-action="Index">@Localizer["Back"]</a>
    @if (Model.RequestAnswered == false)
    {
<a asp-action="RedirectToAnswerCreate" asp-route-id="@Model.RequestId">| @Localizer["Answer"]</a>
    }
</div>