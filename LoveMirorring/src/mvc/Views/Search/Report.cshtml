@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using mvc.ViewModels
@model ReportViewModel
@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<partial name="PartAds" />
<div class="container">
    <form asp-controller="Search" asp-action="ConfirmedReport" method="post">
        <div class="row">

            <div class="col">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Username" value="@Model.Username" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">@Localizer["Title1"]</label>
                    <div class="col-sm-10">
                        <input type="radio" asp-for="Reason" value="Inappropriate contexte" />@Localizer["Reason1"]<br />
                        <input type="radio" asp-for="Reason" value="Fake account" />@Localizer["Reason2"]<br />
                        <input type="radio" asp-for="Reason" value="Identity theft" />@Localizer["Reason3"]<br />
                        <input type="radio" asp-for="Reason" value="Other" />@Localizer["Reason4"]<br />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="message" class="col-sm-2 col-form-label">@Localizer["Details"]</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Details"></textarea>
                    </div>
                    <input type="submit" name="Envoyer" value=@Localizer["Send"]>
                </div>

            </div>
        </div>
    </form>
</div>
