@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<mvc.Models.Answer>

@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnswerText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profil.ProfilDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.QuestionText)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnswerId">@Localizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.AnswerId">@Localizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.AnswerId">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
