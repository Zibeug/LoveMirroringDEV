@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model mvc.Models.Answer

@{
    ViewData["Title"] = Localizer["TitlePage"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Localizer["Title1"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnswerText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnswerValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Profil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profil.ProfilDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionText)
            <select asp-for="ProfilId" class="form-control" asp-items="ViewBag.ProfilId"></select>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AnswerId">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back"]</a>
</div>
